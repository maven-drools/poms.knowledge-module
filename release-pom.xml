<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.lightful.maven.drools.poms</groupId>
  <artifactId>knowledge-module</artifactId>
  <version>2</version>
  <packaging>pom</packaging>
  <name>Maven Drools Support :: Parent POMs :: Knowledge Module</name>
  <description>Parent POM for Maven modules of type 'Drools Knowledge Module'.</description>
  <scm>
    <connection>scm:git:git@github.com:maven-drools/poms.knowledge-module.git</connection>
    <developerConnection>scm:git:git@github.com:maven-drools/poms.knowledge-module.git</developerConnection>
  </scm>
  <distributionManagement>
    <repository>
      <id>de.lightful.releases</id>
      <name>Public Release Repository on lightful.de</name>
      <url>scp://lightful.de/mvnrepo/public/releases</url>
    </repository>
    <downloadUrl>http://lightful.de/mvnrepo/public/releases</downloadUrl>
  </distributionManagement>
  <properties>
    <downloadSources>true</downloadSources>
    <mirrorUrl>http://fireball.bln.itikko.net:8080/nexus/content/groups/public</mirrorUrl>
  </properties>
  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>interval:1440</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
      <id>central</id>
      <url>http://fireball.bln.itikko.net:8080/nexus/content/groups/public</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>interval:1440</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
        <checksumPolicy>fail</checksumPolicy>
      </snapshots>
      <id>central</id>
      <url>http://fireball.bln.itikko.net:8080/nexus/content/groups/public</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <scriptSourceDirectory>/home/ansgar/git-repositories/opensource/maven-drools/poms/knowledge-module/src/main/scripts</scriptSourceDirectory>
    <testSourceDirectory>src/test/java</testSourceDirectory>
    <outputDirectory>target/classes</outputDirectory>
    <testOutputDirectory>target/test-classes</testOutputDirectory>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>src/test/resources</directory>
      </testResource>
    </testResources>
    <directory>target</directory>
  </build>
  <reporting>
    <outputDirectory>target/site</outputDirectory>
  </reporting>
</project>
